<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#4A148C"
                android:startColor="#7B1FA2" />
            <corners android:radius="24dp" />
            <stroke
                android:width="4dp"
                android:color="#CE93D8" />
        </shape>
    </item>
    
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#2A2A2A" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="#404040" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:endColor="#6A1B9A"
                android:startColor="#9C27B0" />
            <corners android:radius="24dp" />
            <stroke
                android:width="2dp"
                android:color="#AB47BC" />
        </shape>
    </item>
</selector>
